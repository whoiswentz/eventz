<section class="event-details">
  <div class="image">
    <%= image_tag(@event.image_file_name) %>
  </div>
  <div class="details">
    <h1><%= @event.name %></h1>
    <h2><%= pluralize(@event.capacity, "spot") %> &bull;  <%= price(@event) %></h2>

    <h3><%= day_and_time(@event) %> in <%= @event.location %></h3>
    <p><%= @event.description %>

    <div class="register">
      <%= register_or_sold_out(@event) %>
      <p><%= link_to "Who's registered?", event_registrations_path(@event) %></p>
    </div>
  </div>
</section>

<section class="admin">
  <%= link_to "Edit Event", edit_event_path(@event), class: "button" %>
  <%= link_to "Delete", event_path(@event), class: "button", data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure you want to delete this event?"
  } %>
</section>