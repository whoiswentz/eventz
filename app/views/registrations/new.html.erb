<h1>Registration for <%= link_to @event.name, @event %></h1>

<%= form_with(model: [@event, @registration]) do |f| %>
  <%= render "shared/errors", model: @registration %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :how_heard %>
  <%= f.select :how_heard, Registration::HOW_HEARD_OPTIONS, prompt: "Pick one" %>

  <%= f.submit %>
<% end %>